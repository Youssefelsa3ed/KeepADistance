<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TheTaskTextViewStyle</item>
        <item name="editTextStyle">@style/TheTaskEditTextStyle</item>
        <item name="android:buttonStyle">@style/TheTaskButtonStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TheTaskTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/cairo_bold_font</item>
    </style>

    <style name="TheTaskEditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/cairo_bold_font</item>
    </style>

    <style name="TheTaskButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/cairo_bold_font</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
